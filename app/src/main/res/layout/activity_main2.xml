<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B3E5FC"
    tools:context=".MainActivity2">

    <TextView
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Holamundo"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0"/>

    <!-- TextView para mostrar mensajes -->

    <TextView
        android:id="@+id/txtResultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.469"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt2"
        app:layout_constraintVertical_bias="0.32" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtResultado"
        app:layout_constraintVertical_bias="1.0">


        <Button
            android:id="@+id/btnImplicit1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Intent Implícito 1" />

        <Button
            android:id="@+id/btnImplicit2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Intent Implícito 2" />

        <Button
            android:id="@+id/btnImplicit3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Intent Implícito 3" />

        <Button
            android:id="@+id/btnImplicit4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Intent Implícito 4" />


        <Button
            android:id="@+id/btnExplicit1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Intent Explícito 1" />

        <Button
            android:id="@+id/btnExplicit2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Intent Explícito 2" />

        <Button
            android:id="@+id/btnExplicit3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Intent Explícito 3" />

        <Button
            android:id="@+id/btnExplicit4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Intent Explícito 4" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
